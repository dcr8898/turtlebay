<%= form_for @item do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br />

  <%= f.label :description %>
  <%= f.text_field :description %><br />

  <%= f.label :start_time %>
  <%= f.date_field :start_time %><br />

  <%= f.label :end_time %>
  <%= f.date_field :end_time %><br />

  <%= f.label :starting_bid %>
  $ <%= f.text_field :starting_bid, :placeholder => "0.00" %><br />

  <%= f.submit :class => 'button button-primary'%>
<% end %>
<a class="button" href="/">Cancel</a>
